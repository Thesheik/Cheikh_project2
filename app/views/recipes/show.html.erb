<h1>
  <%= @recipe.title %> <br
</h1>
<br>
<h5>
  Description:
  <div id="info">
    <%= @recipe.description %>
 </div>
 </h5>

 <img class='recipe-photo' src="<%= @recipe.photo_url %>"><br>
<br>

 <div class="button">

    <%= button_to "Back", root_path, method: :get %>
    <br>

    <% if current_user %>

    <% if current_user.id == @recipe.user_id %>


    <%= button_to "Edit", edit_recipe_path, method: :get %>
    <br>
    <%= button_to "Delete", recipe_path(@recipe),method: :delete, data: {confirm: "Are you sure you want to delete your recipe?"}, class: 'delete' %>
  </div>

    <% end %>
  <% end %>

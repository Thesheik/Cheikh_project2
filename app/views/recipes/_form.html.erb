<%= form_for @recipe do |f| %>
<p>
  <%= f.label :title %><br>
  <%= f.text_area :title %>
</p>

<p>
  <%= f.label :image %><br>
  <%= f.text_field :image %>
</p>

<p>
  <%= f.label :description %><br>
  <%= f.text_area :description %>
</p>

p>
  <%= f.label :photo_url %><br>
  <%= f.text_area :photo_url %>
</p>

<p>
<%= f.submit %>
</p>

<% end %>
